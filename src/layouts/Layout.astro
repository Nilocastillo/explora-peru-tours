---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = "Explora Perú Tours | Descubre Perú con los mejores guías y paquetes a MACHU PICCHU",
  description = "Agencia de viajes especializada en tours y paquetes personalizados en Perú. Viajes de aventura, cultura y naturaleza",
  ogImage = "",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Metadatos SEO básicos -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="tours en Perú, agencia de viajes Perú, viaje Machu Picchu, trekking Salkantay, montaña de 7 colores, turismo cultural Perú, Explora Perú Tours"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.exploraperutours.com" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.exploraperutours.com" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Preload de fuentes -->
    <link
      rel="preload"
      href="/font/Satoshi-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <!-- Canonical URL -->
    <link rel="canonical" href="https://www.exploraperutours.com" />

    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
